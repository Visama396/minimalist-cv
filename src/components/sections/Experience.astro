---
import Section from '@/components/Section.astro'

import { work } from '@/cv'
---

<Section title="Experience">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, highlights }) => {
        const startYear = new Date(startDate).getFullYear()
        const endYear = endDate != null ? new Date(endDate).getFullYear() : "Current"
        const years = `${startYear} - ${endYear}`
        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{name}</h3>
                  <h4>{position}</h4>
                </div>

                <time>{years}</time>
              </header>
              <footer>
                <p>{summary}</p>
              </footer>
            </article>
            
            
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 8px;
  }

  time {
    font-size: .85rem;
    color: #555;
  }
</style>