---
import Section from '@/components/Section.astro'

import { certificates } from '@cv'
import { certificates as certificados } from '@escv'

const { language } = Astro.props

let certis = certificates

if (language == 'es') certis = certificados


---

<Section title={`${(language == 'es')? 'TÃ­tulos' : 'Certificates'}`}>
  <ul>
    {
      certis.map(certificate => {
        const issueYear = new Date(certificate.date).getFullYear()
        return (
          <li>
            <article>
              <header>
                <h3>
                  <a href={certificate.url} title={`Check the certificate ${certificate.name} online`} target="_blank">
                    {certificate.name}
                  </a>
                </h3>
                <h4>{certificate.issuer}</h4>
              </header>
              <footer>
                <time>Issued on {issueYear}</time>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: grid;
    grid-template-columns: repeat(
      auto-fit,
      minmax(200px, 1fr)
    );
    gap: 1rem;
  }

  article {
    border-radius: 8px;
    border: 1px solid #f2f2f2;
    gap: 16px;
    display: flex;
    flex-direction: column;
    padding: 16px;
    height: 100%;
  }

  article header {
    flex: 1;
  }

  article h3 {
    margin-bottom: 4px;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article time {
    font-size: .75rem;
    line-height: 1.2rem;
    margin-bottom: 4px;
  }
</style>